% layout 'default';
% title 'Games';

<h1>Active games</h1>

<section class="games">
	% while (my $game = $games->next) {
		<%=
			include 'game/single',
				game => $game,
				showform => user()->players->search({ game_id => $game->id })->count
				         && $game->players->count < $game->setup->size;
		%>
	% }
</section>
