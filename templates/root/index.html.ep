% layout 'default';
% title 'Games';

<h1>Active games</h1>

<ul class="games">
	% while (my $game = $games->next) {
		<li>
			<a href="<%= url_for 'game-view', id => $game->id %>">
				Game #<%= $game->id %>
			</a>
			<br>
			Setup:
			<a href="<%= url_for 'setup-view', id => $game->setup->id %>">
				<%= $game->setup->name %>
			</a>
			<br>
			Players: <%= join ', ', map { $_->alias } $game->players %>
		</li>
	% }
</ul>
