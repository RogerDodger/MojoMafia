% layout 'default';
% stash->{no_sidebar} = 1;

<div class="register">
	<form method="post">
		<h1>Hey there!</h1>
		<p>
			<label for="username">
				Looks like you're new here. Please choose a username:
			</label>

		<p>
			<input type="text" id="username" name="username"
					size="30" maxlength="24"
					placeholder="Username" required="required">

		<p>
			<input class="btn primary" type="submit" value="Submit">
	</form>
</div>
